{
  "name": "@zure/tw-style-merge",
  "version": "1.3.0",
  "description": "A Tailwind CSS plugin to merge custom styles with theme configurations.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest --watch",
    "test:deploy": "vitest --run",
    "test:cov": "vitest --coverage",
    "nodemon": "nodemon dist/index.js",
    "prepare": "npx husky install",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "tailwindcss",
    "plugin",
    "merge",
    "styles"
  ],
  "author": "Renan Prado",
  "license": "MIT",
  "dependencies": {
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.33.0",
    "husky": "^8.0.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.2",
    "vitest": "^0.34.6"
  },
  "files": [
    "dist"
  ]
}
